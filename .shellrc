__get_git_branch()
{
  if [[ $(git rev-parse --is-bare-repository 2>/dev/null) =~ true ]]; then
    git_info="/bare repo/"
  else
    git_branch=$(git branch 2> /dev/null | grep '* ' | cut -c3-)
    if [[ -n $git_branch ]]; then
      local ahead_behind="$(git rev-list --left-right --count HEAD...@{u} 2>/dev/null)"
      local ahead="$(sed -nre 's/^([0-9]+)\s+([0-9]+)$/\1/p' <<< "$ahead_behind")"
      # local ahead=1
      local behind="$(sed -nre 's/^([0-9]+)\s+([0-9]+)$/\2/p' <<< "$ahead_behind")"
      # local behind=1
      git_info="$git_branch"
      if [[ $behind -gt 0 ]]; then
        git_info="$git_info$behind_color\u25BC$behind"
      fi
      if [[ $ahead -gt 0 ]]; then
        git_info="$git_info$ahead_color\u25B2$ahead"
      fi
      git_info="$git_info "
      local untracked="$(git ls-files --exclude-standard --others | wc -l)"
      if [[ $untracked -gt 0 ]]; then
        git_info="$git_info$untracked_color$untracked\u25A1 "
      fi
      local unstaged="$(git diff --numstat | wc -l)"
      if [[ $unstaged -gt 0 ]]; then
        git_info="$git_info$unstaged_color$unstaged\u25EA "
      fi
      local staged="$(git diff --cached --numstat | wc -l)"
      if [[ $staged -gt 0 ]]; then
        git_info="$git_info$staged_color$staged\u25A0 "
      fi
      local branch_icon=""
      [[ -f $HOME/.fonts/octicons-local.ttf ]] &&
        branch_icon="\uf020 "
      git_info="$branch_color$branch_icon$git_info$branch_color"
      # if ((untracked + unstaged + staged)); then
      #   git_info="$git_info "
      # fi
    fi
  fi
  echo -e "$git_info"
}

__get_virtual_env()
{
  virtual_env=""
  if [[ -z $VIRTUAL_ENV_DIABLE_PROMPT ]]; then
    if [[ -n $VIRTUAL_ENV ]]; then
      virtual_env="($(basename $VIRTUAL_ENV)) "
    fi
  fi
  echo $virtual_env
}

function __add_to_hist()
{
  local hist_size="${#__cd_history__[@]}"
  if [[ ${__cd_history__[$hist_size]} != $1 && ! -z $1 ]]; then
    __cd_history__[$(( $hist_size + 1 ))]="$1"
  fi
}

__dir_history()
{
  if [[ $PWD != $OLDPWD ]]; then
    __add_to_hist $OLDPWD
  fi
}

