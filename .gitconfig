[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  br = branch
  co = checkout
  cm = commit
  ch = cherry-pick
  last = log -p -1
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"

[push]
  default = simple

[pull]
  rebase = true

[include]
  path = .gitconfig.local

[core]
  ignore = ~/.cvsignore

[init]
  templatedir = ~/.git_template
